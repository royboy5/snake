border-radius() {
  -webkit-border-radius: arguments;
  -moz-border-radius: arguments;
  border-radius: arguments;
}

body
  font: 12px Roboto, sans-serif, Arial
  padding: 2rem

header 
  display flex

label
  font-size 2rem
  padding-right 25px

button
  background-color darkgray;
  border 0
  border-radius 5px
  padding 10px 20px
  margin-bottom 8px
  margin-right 10px
  transition .25s

button#start
  &:hover
    background-color green

button#stop
  &:hover
    background-color red
canvas 
  border: 1px solid black